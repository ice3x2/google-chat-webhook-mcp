{
  "name": "google-chat-webhook-mcp",
  "version": "0.1.0",
  "description": "MCP server that forwards messages to Google Chat Webhooks (text and cardsV2).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test:snapshot": "npx ts-node scripts/run-snapshot-tests.ts",
    "test:snapshot:update": "npx ts-node scripts/run-snapshot-tests.ts --update",
    "test:integration": "npx ts-node scripts/run-integration-tests.ts",
    "test:logging": "npx ts-node scripts/test-logging.ts",
    "test": "npm run test:snapshot && npm run test:integration"
  },
  "keywords": [
    "mcp",
    "google-chat",
    "webhook"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "axios": "^1.0.0",
    "marked": "^16.4.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/node": "^18.0.0",
    "express": "^4.21.2",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
